{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "web-app",
      "source": ".",
      "buildCommand": "npm run build",
      "startCommand": "npm start",
      "healthcheckPath": "/"
    },
    {
      "name": "telegram-bot",
      "source": "./bot",
      "buildCommand": "npm run build",
      "startCommand": "npm start",
      "healthcheckPath": "/health"
    }
  ]
} 