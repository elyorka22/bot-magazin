{
  "name": "mens-fashion-telegram-app",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram Mini App интернет-магазин для мужчин с ботом",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:bot\"",
    "dev:web": "next dev",
    "dev:bot": "cd bot && npm run dev",
    "build": "npm run build:web && npm run build:bot",
    "build:web": "next build",
    "build:bot": "cd bot && npm run build",
    "start": "npm run start:web",
    "start:web": "next start",
    "start:bot": "cd bot && npm start",
    "lint": "next lint",
    "install:all": "npm install && cd bot && npm install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "lucide-react": "^0.292.0",
    "next": "14.0.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "workspaces": [
    "bot"
  ]
}
